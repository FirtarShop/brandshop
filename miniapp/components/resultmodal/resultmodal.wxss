.modal {
    background-color: rgba(0,0,0,0.4);
    position: fixed;
    flex-direction: column;
    top: 0;
    left: 0;
    bottom: 0;
    right: 0;
    display: flex;
    justify-content: center;
    align-items: center;
    z-index: 9998;
    width: 750rpx;
    height: 100%;
}

.container {
    position: relative;
    display: flex;
    flex-direction: column;
    width: 612rpx;
    height: 580rpx;
    background-color: white;
    border-radius: 10rpx;
    align-items: center;
}

.background {
    position: absolute;
    display: flex;
    width: 612rpx;
    height: 580rpx;
}

.resultView {
    margin-top: 50rpx;
    align-items: center;
    padding-left: 50rpx;
    padding-right: 50rpx;
    font-size: 45rpx;
    color: #3e9fff;
    position: absolute;
}

.answerView {
    margin-top: 120rpx;
    align-items: center;
    padding-left: 50rpx;
    padding-right: 50rpx;
    font-size: 35rpx;
    line-height: 32rpx;
    color: #f04c48;
    position: absolute;
}

.tipView {
    margin-top: 200rpx;
    align-items: center;
    padding-left: 50rpx;
    padding-right: 50rpx;
    font-size: 26rpx;
    color: #3a3a3a;
    position: absolute;
    line-height: 45rpx;
}

button::after {
    border: none;
}

.btnnext {
    height: 77rpx;
    width: 440rpx;
    margin-top: 400rpx;
    background-repeat: no-repeat;
    background-size: 440rpx 77rpx;
    position: absolute;
    background-color: rgba(255,255,255,0);
}