.modal {
    background-color: rgba(0,0,0,0.4);
    position: fixed;
    flex-direction: column;
    top: 0;
    left: 0;
    bottom: 0;
    right: 0;
    display: flex;
    justify-content: center;
    align-items: center;
    z-index: 9988;
}

.container {
    position: absolute;
    display: flex;
    flex-direction: column;
    width: 100%;
    height: 650rpx;
    background-color: white;
    bottom: 0rpx;
}

.sku-header {
    margin: 20rpx;
    position: absolute;
    width: 710rpx;
    height: 200rpx;
}

.sku-image {
    width: 186rpx;
    height: 186rpx;
    top: -40rpx;
    left: 20rpx;
    position: absolute;
    border: 1rpx solid yellow;
}

.price {
    top: 40rpx;
    left: 230rpx;
    font-size: 40rpx;
    color: #ff3f46;
    position: absolute;
}

.desc {
    top: 90rpx;
    left: 240rpx;
    font-size: 25rpx;
    color: #5e5e5e;
    position: absolute;
}

.sku-close {
    width: 60rpx;
    height: 60rpx;
    top: 0rpx;
    right: 0rpx;
    position: absolute;
}

.sku-color {
    margin: 20rpx;
    position: absolute;
    width: 710rpx;
    height: 200rpx;
    top: 200rpx;
}

label {
    border: 2rpx solid #aaaaaa;
}

.radiogroup {
    position: absolute;
    justify-content: space-between;
    display: flex;
    flex-wrap: wrap;
    top: 60rpx;
    margin: 10rpx;
    height: 130rpx;
    width: 670rpx;
    align-items: center;
}

.radiogroup label {
    font-size: 32rpx;
    color: #5e5e5e;
    display: flex;
    padding-left: 10rpx;
    padding-right: 10rpx;
    border: 1rpx solid #5e5e5e;
    border-radius: 8rpx;
}

.is_checked {
    background-color: #FEF9C8;
    opacity: 0.4;
    color: #fff;
    border: 2rpx solid #fff;
}

.is_checked>label {
    color: red;
}

.sku-num {
    margin: 20rpx;
    position: absolute;
    justify-content: space-between;
    width: 710rpx;
    height: 60rpx;
    top: 440rpx;
}

.image-num {
    display: inline-block;
    vertical-align: middle;
    width: 244rpx;
    height: 54rpx;
    position: absolute;
    top: 4rpx;
    right: 20rpx;
}

.h2 {
    font-size: 30rpx;
    color: #000;
    position: absolute;
    margin-top: 10rpx;
}

.less-num {
    position: absolute;
    top: 4rpx;
    left: 448rpx;
    height: 54rpx;
    width: 82rpx;
}

.text-num {
    font-size: 30rpx;
    color: #000;
    position: absolute;
    top: 10rpx;
    left: 560rpx;
}

.more-num {
    position: absolute;
    top: 4rpx;
    left: 610rpx;
    height: 54rpx;
    width: 82rpx;
}

.buy-confirm {
    width: 750rpx;
    height: 98rpx;
    position: absolute;
    left: 0rpx;
    bottom: 0rpx;
}