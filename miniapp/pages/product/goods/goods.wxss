page {
    width: 750rpx;
    height: 100%;
}

.container {
    position: relative;
    width: 750rpx;
    flex-direction: column;
    justify-content: flex-start;
}

image {
    width: 100%;
    position: relative;
    display: block;
}

.detail-container {
    position: fixed;
    height: 100%;
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
}

.detail {
    width: 750rpx;
    height: 100%;
    margin-bottom: 236rpx;
}

.orderView {
    width: 750rpx;
    height: 118rpx;
    position: fixed;
    left: 0rpx;
    bottom: 0rpx;
}

button {
    border: 0rpx;
    border-radius: 0rpx;
}

button[class="service"]::after {
    border: 0rpx;
    border-radius: 0rpx;
}

button[class="buynow"]::after {
    border: 0rpx;
    border-radius: 0rpx;
}

.service {
    width: 376rpx;
    height: 118rpx;
    position: absolute;
    left: 0rpx;
    bottom: 0rpx;
    background-repeat: no-repeat;
    background-size: 100%,100%;
}

.buynow {
    width: 376rpx;
    height: 118rpx;
    position: absolute;
    right: 0rpx;
    bottom: 0rpx;
    background-repeat: no-repeat;
    background-size: 100%,100%;
}