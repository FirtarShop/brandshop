page {
    height: 100%;
    width: 750rpx;
}

.container {
    position: relative;
    width: 750rpx;
    height: 100%;
    display: flex;
    padding: 0rpx;
    background: white;
}

.safety-video-banner {
    width: 750rpx;
    height: 270rpx;
    position: relative;
}

.videoView {
    width: 750rpx;
    height: 100%;
    top: 270rpx;
    position: absolute;
    display: flex;
    flex-wrap: wrap;
}

.playerItem {
    width: 750rpx;
    height: auto;
    display: flex;
    position: relative;
    flex-direction: column;
    margin-bottom: 40rpx;
}

.playerView {
    width: 750rpx;
    height: 422rpx;
    position: relative;
    align-items: center;
}

.videoMask {
    width: 750rpx;
    height: 422rpx;
    position: absolute;
    top: 0rpx;
    background-color: rgba(0,0,0,0.4);
    align-items: center;
    justify-content: center;
}

.playstatus {
    width: 48rpx;
    height: 48rpx;
    position: relative;
    left: 326rpx;
    top: 187rpx;
}

.introView {
    width: 750rpx;
    height: auto;
    display: flex;
    position: relative;
    flex-direction: column;
    margin-top: 10rpx;
    margin-bottom: 10rpx;
}

.subtitle {
    width: 750rpx;
    height: 50rpx;
    position: relative;
    font-size: 28rpx;
    color: #000000;
    display: flex;
    justify-content: flex-start;
    align-items: center;
    padding-left: 20rpx;
}

.line {
    width: 750rpx;
    height: 16rpx;
    position: relative;
}

.intro {
    width: 710rpx;
    height: auto;
    position: relative;
    font-size: 24rpx;
    color: #7C7D7E;
    display: flex;
    justify-content: flex-start;
    align-items: center;
    line-height: 43rpx;
    padding-left: 20rpx;
}